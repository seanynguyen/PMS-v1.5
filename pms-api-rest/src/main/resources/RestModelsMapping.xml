<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>

    <!--REMEMBER, IF A MAPPING INCLUDING ID PART, ITS ID MUST BE ADDED TO THE JAVA CONVERTER AS WELL-->

    <!-- Item Status mapping -->
    <mapping map-id="statusMapping">
        <class-a>com.youngidea.pms.entity.item.ItemStatus</class-a>
        <class-b>com.youngidea.pms.api.rest.model.ItemStatusModel</class-b>
        <field>
            <a>name</a>
            <b>statusName</b>
        </field>
    </mapping>

    <!-- Item price mapping -->
    <mapping>
        <!-- Test -->
        <!--<class-a>com.youngidea.pms.api.rest.dao.impl.converter.impl.dozer.ItemPriceSrcDozerTest</class-a>-->
        <!--<class-b>com.youngidea.pms.api.rest.dao.impl.converter.impl.dozer.ItemPriceDestDozerTest</class-b>-->
        <class-a>com.youngidea.pms.api.rest.model.request.ItemPriceRequestModel</class-a>
        <class-b>com.youngidea.pms.entity.item.ItemPrice</class-b>
        <field>
            <a>id</a>
            <b>id</b>
        </field>
        <field>
            <a>statusId</a>
            <b>itemStatus.id</b>
        </field>
        <field>
            <a>price</a>
            <b>price</b>
        </field>
    </mapping>

    <!-- Item mapping -->
    <!-- Request -> Entity -->
    <mapping>
        <class-a>com.youngidea.pms.api.rest.model.request.ItemRequestModel</class-a>
        <class-b>com.youngidea.pms.entity.item.Item</class-b>
        <field>
            <a>categoryId</a>
            <b>category.id</b>
        </field>
    </mapping>
    <!-- Entity -> Response -->
    <mapping>
        <class-a>com.youngidea.pms.entity.item.Item</class-a>
        <class-b>com.youngidea.pms.api.rest.model.response.ItemResponseModel</class-b>
        <field>
            <a>category.id</a>
            <b>categoryModel.id</b>
        </field>
        <field>
            <a>category.name</a>
            <b>categoryModel.name</b>
        </field>
        <field>
            <a>category.description</a>
            <b>categoryModel.description</b>
        </field>
        <field>
            <a>category.parentCategory.id</a>
            <b>categoryModel.parentId</b>
        </field>
    </mapping>
    <!-- Category mapping -->
    <mapping>
        <class-a>com.youngidea.pms.api.rest.model.CategoryModel</class-a>
        <class-b>com.youngidea.pms.entity.item.Category</class-b>
    </mapping>
</mappings>